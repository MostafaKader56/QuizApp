<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.QuizFragment"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <ImageButton
            android:id="@+id/quiz_closeImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/quiz_close_btn"
            android:layout_marginTop="15dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:padding="36dp"
            android:contentDescription="@string/imageContentDescription"/>

        <TextView
            android:id="@+id/quiz_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:fontFamily="@font/crimson_text"
            android:text="@string/loading_quiz"
            android:textSize="28sp"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/quiz_closeImageButton"/>

        <TextView
            android:id="@+id/quiz_Questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_title"
            android:layout_alignStart="@+id/quiz_title"
            android:layout_alignEnd="@+id/quiz_closeImageButton"
            android:layout_marginTop="15dp"
            android:text="@string/questions"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/colorLightText"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/quiz_questions_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_Questions"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/white"
            android:textSize="36sp"
            android:layout_alignStart="@+id/quiz_title"
            android:layout_alignEnd="@+id/quiz_closeImageButton"
            android:text="0"
            android:gravity="center_horizontal"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_title"
            android:layout_alignStart="@+id/quiz_closeImageButton"
            android:layout_alignEnd="@+id/quiz_title"
            android:layout_alignBottom="@+id/quiz_questions_number"
            android:layout_marginTop="15dp">

            <ProgressBar
                android:id="@+id/quiz_question_progress"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:textColor="@color/colorLightText"
                android:progressDrawable="@drawable/circular_progress"
                android:progress="100"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/quiz_time_progress"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_below="@+id/quiz_title"
            android:layout_alignEnd="@+id/quiz_title"
            android:layout_alignStart="@+id/quiz_closeImageButton"
            android:layout_marginTop="15dp"
            android:layout_alignBottom="@+id/quiz_questions_number"
            android:textSize="28sp"
            android:fontFamily="@font/work_sans"
            android:textColor="@color/white"
            android:visibility="invisible"
            android:gravity="center"/>

        <TextView
            android:id="@+id/quiz_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_time_progress"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/work_sans"
            android:gravity="center_horizontal"
            android:text="@string/fetching_data"
            android:textColor="@color/white"
            android:visibility="visible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/quiz_option_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_question"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/outline_light_btn_bg"
            android:fontFamily="@font/work_sans"
            android:padding="12dp"
            android:text="@string/option_button"
            android:textAllCaps="false"
            android:textColor="@color/colorLightText"
            android:textSize="16sp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/quiz_option_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_option_one"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/outline_light_btn_bg"
            android:fontFamily="@font/work_sans"
            android:padding="12dp"
            android:text="@string/option_button"
            android:textAllCaps="false"
            android:textColor="@color/colorLightText"
            android:textSize="16sp"
            android:visibility="invisible" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/quiz_option_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_option_two"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/outline_light_btn_bg"
            android:fontFamily="@font/work_sans"
            android:padding="12dp"
            android:text="@string/option_button"
            android:textAllCaps="false"
            android:textColor="@color/colorLightText"
            android:textSize="16sp"
            android:visibility="invisible" />

        <com.google.android.gms.ads.AdView
            xmlns:ads="http://schemas.android.com/apk/res-auto"
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quiz_option_three"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="10dp"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-4752389125269439/8619124107"/>

        <TextView
            android:id="@+id/quiz_question_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/adView"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/work_sans"
            android:gravity="center_horizontal"
            android:text="@string/verifying_answer"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:visibility="invisible" />
        <Button
            android:id="@+id/quiz_next_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/work_sans"
            android:padding="12dp"
            android:layout_below="@+id/quiz_question_feedback"
            android:text="@string/next_question"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:visibility="invisible" />

    </RelativeLayout>


</ScrollView>