<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ListFragment"
    android:background="@color/colorPrimaryDark">

    <RelativeLayout
        android:id="@+id/toolBar"
        android:layoutDirection="ltr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/listPageTitle"
            android:textColor="@color/colorPrimary"
            android:text="@string/app_name"
            android:fontFamily="@font/crimson_text"
            android:textSize="34sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="24dp"/>

        <TextView
            android:id="@+id/changeLang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimary"
            android:layout_margin="15dp"
            android:textSize="18sp"
            android:fontFamily="@font/work_sans"
            android:text="@string/lang"
            android:layout_alignTop="@+id/listPageTitle"
            android:layout_toStartOf="@+id/listAddView"
            tools:ignore="RelativeOverlap"/>

        <View
            android:id="@+id/listAddView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/ic_add"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="24dp"
            android:layout_alignTop="@+id/listPageTitle" />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolBar"
        android:visibility="invisible"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@+id/list_recyclerView"
        android:layout_alignBottom="@+id/list_recyclerView"
        android:layout_alignStart="@+id/list_recyclerView"
        android:layout_alignEnd="@+id/list_recyclerView" >
        <ProgressBar
            android:id="@+id/list_progressBar"
            android:indeterminate="true"
            android:indeterminateTint="@color/colorPrimary"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>